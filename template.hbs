<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    </head>
    <body>
        <header>
            <p>Total compile time: {{totalCompileTime}} seconds</p>
        </header>
        <h2>Plugins</h2>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Plugin</th>
                <th scope="col">Time (seconds)</th>
            </tr>
            </thead>
            <tbody>
            {{#each plugins}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.time}}</td>
                <tr/>
            {{/each}}
            </tbody>
        </table>
        <h2>Loaders</h2>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Loader</th>
                <th scope="col">Total time (seconds)</th>
                <th scope="col">Amount of files</th>
                <th scope="col">List of files</th>
            </tr>
            </thead>
            <tbody>
            {{#each loaders}}
                <tr>
                    <td>
                        <ul>
                            {{#each this.loaders}}
                            <li>
                                {{this}}
                            </li>
                        {{/each}}
                        </ul>
                    </td>
                    <td>{{this.time}}</td>
                    <td>{{this.amountOfFiles}}</td>
                    <td>
                        <button type="button" class="btn btn-primary" 
                                data-bs-toggle="collapse" data-bs-target="[data-collapse-id='{{this.id}}']">Show files</button>
                        <ul class="collapse" data-collapse-id="{{this.id}}">
                            {{#each this.files}}
                                <li>{{this.name}} (Time: {{this.time}} ms)</li>
                            {{/each}}
                        </ul>
                    </td>
                <tr/>
            {{/each}}
            </tbody>
        </table>
        <footer>
            <p>
                Generated with <a href="https://www.npmjs.com/package/speed-measure-webpack-plugin-visualizer">
                speed-measure-webpack-plugin-visualizer v{{version}}</a>

            </p>
        </footer>
    </body>
</html>
